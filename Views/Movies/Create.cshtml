@model Course.ViewModels.NewMovieViewModel

@{
    ViewBag.Title = "Create Movie";
}

@using (Html.BeginForm("Create", "Movies"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Please fix the following errors")
    <div class="form-group">
        @Html.LabelFor((viewModel) => viewModel.Movie.Name)
        @Html.TextBoxFor((viewModel) => viewModel.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor((viewModel) => viewModel.Movie.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor((viewModel) => viewModel.Movie.ReleaseDate)
        @Html.TextBoxFor((viewModel) => viewModel.Movie.ReleaseDate, new { @class = "form-control" })
        @Html.ValidationMessageFor((viewModel) => viewModel.Movie.ReleaseDate)
    </div>

    <div class="form-group">
        @Html.LabelFor((viewModel) => viewModel.Movie.GenreId)
        @Html.DropDownListFor((viewModel) => viewModel.Movie.GenreId, Model.Genres,
            "Select a Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor((viewModel) => viewModel.Movie.GenreId)
    </div>

    <div class="form-group">
        @Html.LabelFor((viewModel) => viewModel.Movie.NumberInStock)
        @Html.TextBoxFor((viewModel) => viewModel.Movie.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor((viewModel) => viewModel.Movie.NumberInStock)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")    
}