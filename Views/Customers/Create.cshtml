@model Course.ViewModels.NewCustomerViewModel

@{
    ViewBag.Title = "Create Customer";
}

@using (Html.BeginForm("Create", "Customers"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor((viewModel) => viewModel.Customer.Name)
        @Html.TextBoxFor((viewModel) => viewModel.Customer.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor((viewModel) => viewModel.Customer.Birthdate)
        @Html.TextBoxFor((viewModel) => viewModel.Customer.Birthdate, new { @class = "form-control" })
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor((viewModel) => viewModel.Customer.IsSubscribedToNewsletter) Subscribed to Newsletter
        </label>
    </div>

    <div class="form-group">
        @Html.LabelFor((viewModel) => viewModel.Customer.MembershipTypeId)
        @Html.DropDownListFor((viewModel) => viewModel.Customer.MembershipTypeId,
            Model.Types, "Select Membership Type", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}